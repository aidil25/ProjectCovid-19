<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.HomeFragment">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#3F51B5"
            >
            <ImageView
                android:id="@+id/img"
                android:layout_width="220dp"
                android:layout_height="150dp"
                android:src="@drawable/bg_app"
                android:layout_alignParentEnd="true"
                />
            <TextView
                android:layout_toStartOf="@id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="COVIDS APPS"
                android:textColor="@android:color/white"
                android:layout_centerVertical="true"
                android:layout_marginStart="20sp"
                android:textSize="30sp"
                />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="800dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/bg_card"
            >
            <androidx.appcompat.widget.AppCompatSpinner
                    android:background="@drawable/bg_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="20sp"
                    android:entries="@array/Kota"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:id="@+id/spinner" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update Kasus Korona"
                android:layout_below="@id/spinner"
                android:layout_marginStart="18dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/tv1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/time"
                android:layout_below="@id/tv1"
                android:text="Terakhir di update"
                android:layout_marginStart="17dp"
                android:layout_marginTop="8dp"
                />
            <androidx.cardview.widget.CardView
                android:id="@+id/cv_covid"
                android:layout_below="@id/time"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardCornerRadius="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="3"
                    android:orientation="horizontal"
                    >
                    <!--sembuh-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                            <TextView
                                android:textStyle="bold"
                                android:id="@+id/tv_sembuh"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textSize="20sp"
                                android:textAlignment="center"
                                android:layout_centerVertical="true"
                                android:textColor="#59D85C"
                                />
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Sembuh"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:textColor="#59D85C"
                            />

                    </RelativeLayout>

                    <!--Meninggal-->
                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_positif"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"
                            android:textColor="#2196F3"
                            />
                        <TextView
                            android:textStyle="bold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Positif"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:textColor="#2196F3"
                            />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/tv_meninggal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:textAlignment="center"
                            android:layout_centerVertical="true"
                            android:textColor="#E91E63"
                            />
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:text="Meninggal"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_marginBottom="20dp"
                            android:textColor="#E91E63"
                            />

                    </RelativeLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Peta Sebaran Di sumatera Barat"
                android:layout_below="@id/cv_covid"
                android:layout_marginStart="18dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="16dp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:textSize="20sp"
                android:id="@+id/tv2"
                />

            <fragment
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tv2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                tools:context=".activity.MapsActivity" />


        </RelativeLayout>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
